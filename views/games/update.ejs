<%- include('../partials/header') %>

<form id="newGameForm" action="/games/<%= game._id %>/update" method="POST">
  <fieldset>
    <br />
    <div class="form-group">
      <label class="form-label mt-4">Title</label>
      <input
        type="form-text"
        name="title"
        class="form-control"
        id="newGameTitle"
        aria-describedby="nameReminder"
        placeholder="Enter Game Title"
        value="<%= game.title %>"
      />
      <small id="nameReminder" class="form-text text-muted"
        >Please double check everything this time!</small
      >
    </div>
    <div class="form-group">
      <label class="form-label mt-4">Release Year</label>
      <input
        type="Date"
        name="releaseDate"
        class="form-control"
        id="newGameDate"
        placeholder="mm/dd/yyyy"
      />
    </div>
    <div class="form-group">
      <label class="form-label mt-4">Genre</label>
      <select
        class="form-select"
        id="newGameGenre"
        name="genre"
        selected="<%= game.genre %>"
      >
        <option value="Action">Action</option>
        <option value="Adventure">Adventure</option>
        <option value="RPG">RPG</option>
        <option value="Shooter">Shooter</option>
        <option value="Horror">Horror</option>
        <option value="Sports">Sports</option>
        <option value="Fighting">Fighting</option>
        <option value="Racing">Racing</option>
        <option value="Simulation">Simulation</option>
        <option value="Puzzle">Puzzle</option>
      </select>
    </div>
    <div class="form-group">
      <label class="form-label mt-4">Description</label>
      <textarea
        class="form-control"
        name="description"
        id="newGameDescription"
        rows="8"
      >
<%= game.description %></textarea
      >
    </div>
    <button type="submit" class="btn btn-primary">update Game</button>
  </fieldset>
</form>

<%- include('../partials/footer') %>
