<%- include('../partials/header') %>
<div class="">
  <% games.forEach(g => { %>
  <section class="card col-sm-4 col-md-6">
    <h3 class="card-header text-center bg-danger"><%= g.title %></h3>
    <div class="card-body bg-info">
      <section class="card-subtitle mb-2 text-muted">
        <h6>Genre: <%= g.genre %></h6>
        <h6>Release Date: <%= g.releaseDate.toDateString() %></h6>
      </section>
      <div class="card-link"><a href="/games/<%= g._id %>">DETAILS</a></div>
    </div>
  </section>
  <% }) %>
</div>

<%- include('../partials/footer') %>
